<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.login.sign_up.DialogNoClass"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivDialogNoClassClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="6dp"
        android:src="@drawable/ic_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/josefin_bold"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="Jadi kelasmu belum terdaftar ya? coba chat yang buat aplikasi karena ada beberapa informasi yang dibutuhkan sebelum menambahkan kelas"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDialogNoClassChat"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/black_700"
        app:cardCornerRadius="28dp">

        <TextView
            android:id="@+id/tvDialogAlertBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/josefin_medium"
            android:text="Chat ðŸ‘‹"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>