<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:elevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img_error"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNotFoundTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/view_not_found_title"
            android:textAlignment="center"
            android:textSize="20sp"
            android:theme="@style/BoldText" />

        <TextView
            android:id="@+id/tvNotFoundDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/view_not_found_desc"
            android:textAlignment="center"
            android:textSize="16sp"
            android:theme="@style/NormalText" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>